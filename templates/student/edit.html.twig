{% extends 'base.html.twig' %}

{% block title %}Hello Rudy!{% endblock %}

{% block body %}
    <div class="page">
        <div class="page-main">
            <div class="header py-4">
                <div class="container">
                    <div class="d-flex">
                        <a class="header-brand" href="">
                            <span style="text-transform: uppercase">Student Enrollment System</span>
                        </a>
                        <div class="d-flex order-lg-2 ml-auto">
                            <div class="dropdown">
                                <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
                                    <span class="avatar" style="background-image: url({{ asset('demo/faces/male/25.jpg') }})"></span>
                                    <span class="ml-2 d-none d-lg-block">
                      <span class="text-default">Rudy Compayan</span>
                      <small class="text-muted d-block mt-1">Administrator</small>
                    </span>
                                </a>
                            </div>
                        </div>
                        <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse" data-target="#headerMenuCollapse">
                            <span class="header-toggler-icon"></span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-3 ml-auto">
                            <!--form class="input-icon my-3 my-lg-0">
                                <input type="search" class="form-control header-search" placeholder="Search&hellip;" tabindex="1">
                                <div class="input-icon-addon">
                                    <i class="fe fe-search"></i>
                                </div>
                            </form-->
                        </div>
                        <div class="col-lg order-lg-first">
                            <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
                                <li class="nav-item">
                                    <a href="/" class="nav-link"><i class="fe fe-home"></i> Home</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/students" class="nav-link active" data-toggle="dropdown"><i class="fe fe-box"></i> Students</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="my-3 my-md-5">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <a href="/students" title="Back to Student" class="btn btn-secondary btn-large" style="margin-bottom: 5px;"> <i class="fe fe-arrow-left"></i> Back to Student Lists</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="col-12">
                            {% for flash_message in app.session.flashBag.get('success') %}
                                <div class="alert alert-success" id="flash">
                                    {{ flash_message }}
                                </div>
                            {% endfor %}
                            <form class="card" action="/students/update" method="post">
                                <div class="card-body p-6">
                                    <div class="card-title">Edit student</div>
                                    <div class="form-group">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" value="{{  student.name }}" required name="name" placeholder="Enter name">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Birthday</label>
                                        <input type="date" name="bday" class="form-control" required value="{{  student.bday|date('Y-m-d') }}"  data-mask="00/00/0000" data-mask-clearifnotmatch="true" placeholder="00/00/0000" />
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Phone</label>
                                        <input type="number" class="form-control" required value="{{  student.phone }}"  name="phone" placeholder="09081234567">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Course</label>
                                        <select name="course" required class="form-control custom-select">
                                            <option value="">Select Course</option>
                                            <option value="Information Technology" {{ student.course == "Information Technology" ? "selected" : "" }}>Information Technology</option>
                                            <option value="Computer Science" {{ student.course == "Computer Science" ? "selected" : "" }}>Computer Science</option>
                                            <option value="Computer Engineering" {{ student.course == "Computer Engineering" ? "selected" : "" }}>Computer Engineering</option>
                                            <option value="Medicine" {{ student.course == "Medicine" ? "selected" : "" }}>Medicine</option>
                                            <option value="Teacher" {{ student.course == "Teacher" ? "selected" : "" }}>Teacher</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Block</label>
                                        <select name="block" required class="form-control custom-select">
                                            <option value="">Select Block</option>
                                            <option value="Block A4IT" {{ student.block == "Block A4IT" ? "selected" : "" }}>Block A4IT</option>
                                            <option value="Block BComSci" {{ student.block == "Block BComSci" ? "selected" : "" }}>Block BComSci</option>
                                            <option value="Block DComEng" {{ student.block == "Block DComEng" ? "selected" : "" }}>Block DComEng</option>
                                            <option value="Block EMed" {{ student.block == "Block EMed" ? "selected" : "" }}>Block EMed</option>
                                            <option value="Block ETeach" {{ student.block == "Block ETeach" ? "selected" : "" }}>Block ETeach</option>
                                        </select>
                                    </div>
                                    <input type="hidden" value="{{ student.id }}" name="id">
                                    <div class="form-footer">
                                        <button type="submit" class="btn btn-primary">Update Details</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-auto ml-lg-auto">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <ul class="list-inline list-inline-dots mb-0">
                                    <li class="list-inline-item"><a href="">Documentation</a></li>
                                    <li class="list-inline-item"><a href="">FAQ</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0 text-center">
                        Copyright Â© 2018 <a href=".">Rudy</a>. All rights reserved.
                    </div>
                </div>
            </div>
        </footer>
    </div>
{% endblock %}
